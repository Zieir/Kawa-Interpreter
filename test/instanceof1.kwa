
var paire p;
var paire pt;
var triple t;

class paire {
  attribute int x;
  attribute int y;

  method void constructor(int x, int y) {
    this.x = x;
    this.y = y;
  }

  method int somme() {
    return this.x + this.y;
  }
}

class triple extends paire {
  attribute int z;

  method void constructor(int x, int y, int z) {
    this.x = x;
    this.y = y;
    this.z = z;
  }

  method int somme() {
    return this.x + this.y + this.z;
  }

  method int produit() {
    return this.x * this.y * this.z;
  }
}

main {
  p = new paire(1, 2);
  t = new triple(3, 4, 5);
  pt = new triple(1, 2, 3);
  print(p instanceof paire);
  print(p instanceof triple);
  print(t instanceof paire);
  print(t instanceof triple);
  print(pt instanceof paire);
  print(pt instanceof triple);
  // affiche true, false, puis true, true, puis true, true.
}
